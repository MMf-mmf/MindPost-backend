# ============================================================
# MindPost Backend — Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit your actual .env file.
# ============================================================

# -----------------------------------------------
# Django Core
# -----------------------------------------------
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=project.settings.local

# -----------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------
# Production DB
PRODUCTION_DATABASE_NAME=your_db_name
PRODUCTION_DATABASE_USER=your_db_user
PRODUCTION_DATABASE_PASSWORD=your_db_password
PRODUCTION_DATABASE_HOST=your_db_host

# Staging / Development DB
DEVELOPMENT_DATABASE_NAME=your_staging_db_name
DEVELOPMENT_DATABASE_USER=your_staging_db_user
DEVELOPMENT_DATABASE_PASSWORD=your_staging_db_password
DEVELOPMENT_DATABASE_HOST=your_staging_db_host
STAGING_DATABASE_HOST=your_staging_db_host

# Local DB (optional)
LOCAL_DATABASE_NAME=your_local_db_name
LOCAL_DATABASE_USER=your_local_db_user
LOCAL_DATABASE_PASSWORD=your_local_db_password
LOCAL_DATABASE_HOST=localhost
LOCAL_DATABASE_PORT=5432

# -----------------------------------------------
# Google Cloud Platform
# -----------------------------------------------
GS_PROJECT_ID=your-gcp-project-id
GS_BUCKET_NAME_STAGING=your-staging-bucket-name
GS_BUCKET_NAME_PRODUCTION=your-production-bucket-name
GCS_SECRET_NAME=your-gcs-secret-manager-secret-name

# -----------------------------------------------
# OpenAI (Whisper transcription + embeddings + chat)
# -----------------------------------------------
OPENAI_API_KEY=sk-...

# -----------------------------------------------
# Email — Mailgun via Anymail
# -----------------------------------------------
MAIL_GUN_API_KEY=your-mailgun-api-key

# -----------------------------------------------
# Stripe (Payments / Subscriptions)
# -----------------------------------------------
# Staging / local
STRIPE_PUBLIC_KEY_STAGING=pk_test_...
STRIPE_SECRET_KEY_STAGING=sk_test_...
STRIPE_WEBHOOK_SECRET_STAGING=whsec_...
STAGING_BASIC_PRICE_ID=price_...
STAGING_PRO_PRICE_ID=price_...

# Production
STRIPE_PUBLIC_KEY_PRODUCTION=pk_live_...
STRIPE_SECRET_KEY_PRODUCTION=sk_live_...
STRIPE_WEBHOOK_SECRET_PRODUCTION=whsec_...
PRODUCTION_BASIC_PRICE_ID=price_...
PRODUCTION_PRO_PRICE_ID=price_...

# -----------------------------------------------
# X / Twitter API (OAuth 2.0 — per-user posting)
# -----------------------------------------------
# Local
LOCAL_X_2_0_CLIENT_ID=your-local-twitter-client-id
LOCAL_X_2_0_CLIENT_SECRET=your-local-twitter-client-secret

# Staging
STAGING_X_2_0_CLIENT_ID=your-staging-twitter-client-id
STAGING_X_2_0_CLIENT_SECRET=your-staging-twitter-client-secret

# Production
PRODUCTION_CLIENT_ID=your-production-twitter-client-id
PRODUCTION_CLIENT_SECRET=your-production-twitter-client-secret

# -----------------------------------------------
# X / Twitter API (OAuth 1.0a — app-level media upload)
# -----------------------------------------------
# Local
LOCAL_CONSUMER_API_KEY=your-local-api-key
LOCAL_CONSUMER_API_KEY_SECRET=your-local-api-key-secret
LOCAL_ACCESS_TOKEN=your-local-access-token
LOCAL_ACCESS_SECRET=your-local-access-secret

# Staging
STAGING_CONSUMER_API_KEY=your-staging-api-key
STAGING_CONSUMER_API_KEY_SECRET=your-staging-api-key-secret
STAGING_ACCESS_TOKEN=your-staging-access-token
STAGING_ACCESS_SECRET=your-staging-access-secret

# Production
PRODUCTION_API_KEY=your-production-api-key
PRODUCTION_API_KEY_SECRET=your-production-api-key-secret
PRODUCTION_ACCESS_TOKEN=your-production-access-token
PRODUCTION_ACCESS_SECRET=your-production-access-secret

# -----------------------------------------------
# Misc
# -----------------------------------------------
DEV_PHONE_NUMBER=+1234567890